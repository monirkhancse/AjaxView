@model FinalEvidenceCore.ViewModels.VM_Product_Create
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Add New Product</h2>
@using (Html.BeginForm("AddOrEdit", "Products", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "SubmitForm" }))
{
    @Html.AntiForgeryToken();
    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s2">
                    @Html.LabelFor(t => t.ProductName)
                </div>
                <div class="input-field col s10">
                    @Html.EditorFor(t => t.ProductName)
                    @Html.ValidationMessageFor(t => t.ProductName, "")
                </div>
            </div>
            <div class="row">
                <div class="input-field col s2">
                    @Html.LabelFor(t => t.PurchasePrice)
                </div>
                <div class="input-field col s10">
                    @Html.EditorFor(t => t.PurchasePrice)
                    @Html.ValidationMessageFor(t => t.PurchasePrice, "")
                </div>
            </div>
            <div class="row">
                <div class="input-field col s2">
                    @Html.LabelFor(t => t.ExpireDate)
                </div>
                <div class="input-field col s10">
                    @Html.TextBoxFor(t => t.ExpireDate, "{0:mm/dd/yyyy}", new { @class = "datepicker" })
                    @Html.ValidationMessageFor(t => t.ExpireDate, "")
                </div>
            </div>
            <div class="row">
                <div class="input-field col s2">
                    @Html.LabelFor(t => t.SalesPrice)
                </div>
                <div class="input-field col s10">
                    @Html.EditorFor(t => t.SalesPrice)
                    @Html.ValidationMessageFor(t => t.SalesPrice, "")
                </div>
            </div>
            <div class="row">
                <div class="input-field col s2">
                    @Html.LabelFor(t => t.OrderQuantity)
                </div>
                <div class="input-field col s10">
                    @Html.EditorFor(t => t.OrderQuantity)
                    @Html.ValidationMessageFor(t => t.OrderQuantity, "")
                </div>
            </div>
            <div class="row">
                <div class="input-field col s2">
                    @Html.LabelFor(model => model.ImageUrl)
                </div>
                <img src="~/VM_Images/dprofile.png" height="100" width="75" class="change_edit" />
                <input type="file" name="ImageFile" class="form-control changeImage" />
                @Html.ValidationMessageFor(model => model.ImageUrl, "")

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn" />
            </div>
        </form>
    </div>
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(function () {
        $('.changeImage').change(function () {
            var input = this;
            if (input.files) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('.change_edit').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }

        });
    });
    $(document).ready(function () {
        $('.datepicker').datepicker({
            changeMonth: true,
            changeYear: true,
            showOn: "button",
            buttonText: "Select date"
        });
    });
</script>
