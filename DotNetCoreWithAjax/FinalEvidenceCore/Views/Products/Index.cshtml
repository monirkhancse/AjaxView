@{
    ViewBag.Title = "Index";
}

<h2>Product List</h2>
View Model
<hr />
@Html.ActionLink("Create New", "Create", "Products", htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
<br />
<br />
<div>
    <div>
        <table border="1" class="table table-responsive">
            <thead>
                <tr>
                    <th>ProductName</th>
                    <th>PurchasePrice</th>
                    <th>SalesPrice</th>
                    <th>OrderQuantity</th>
                    <th>ExpireDate</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.PurchasePrice</td>
                    <td>@item.SalesPrice</td>
                    <td>@item.OrderQuantity</td>
                    <td>@Convert.ToString(String.Format("{0:MM/dd/yyyy}", item.ExpireDate))</td>

                    <td><img src="~/VM_Images/@item.ImageName" asp-append-version="true" width="75" height="100" /></td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }, htmlAttributes: new { @class = "btn btn-warning", @role = "button" })
                        @Html.ActionLink("Delete", "Delete", "Products", new { id = item.ProductId }, htmlAttributes: new { @class = "btn btn-danger", @role = "button" })
                    </td>

                </tr>
            }
        </table>
    </div>
</div>

